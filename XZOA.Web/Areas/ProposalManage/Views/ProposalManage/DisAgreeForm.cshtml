
@{
    ViewBag.Title = "DisAgreeForm";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
     function submitForm() {
        if ($("#reasons").val() == "") {
            $.modalMsg('请填写简述理由', 'error');
            return false;
        }
        $.submitForm({
            url: '/ProposalManage/ProposalManage/SubmitDisAgreeForm?keyValue=' + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                $.currentWindow().$("#gridList").resetSelection();
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        });

    }
</script>
<form name="myForm" id="form1">
    <div style="padding-top: 20px; margin-right: 20px;">
        <table class="form">
            <tr>
                <th class="formTitle">
                    简述理由
                </th>
                <td class="formValue" colspan="3">
                    <input type="hidden" id="is_pass"  value="N"/>
                    <textarea id="reasons" name="reasons" class="form-control"></textarea>
                </td>
            </tr>
        </table>
    </div>
</form>

